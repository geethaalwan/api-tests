{
  "extends": "standard",
  "plugins": [
    "standard",
    "promise"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "global-require": "error",
    "max-len": ["warn", 120, 2, {
      "ignoreComments": true,
      "ignoreUrls": true
    }],
    "no-multi-spaces": ["error", {
      "ignoreEOLComments": true
    }],
    "no-var": "error",
    "prefer-const": "warn",
    "semi": ["error", "always"],
    "sort-imports": "error"
  }
}
